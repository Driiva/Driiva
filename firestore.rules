rules_version = '2';

/**
 * =============================================================================
 * DRIIVA FIRESTORE SECURITY RULES (Production)
 * =============================================================================
 *
 * Context:
 *   - Firebase Auth: users sign up with email/password (auth.uid = user id).
 *   - Collections: users, trips, driver_stats, policies, communityPool,
 *     poolShares, leaderboard, tripPoints, tripSegments.
 *
 * Principles:
 *   1. Users can only read/write their own data (users, trips, policies).
 *   2. Aggregated/computed data (driver_stats, communityPool, leaderboard,
 *      poolShares, tripSegments) are read-only for clients; only Cloud
 *      Functions (Firebase Admin SDK) can write them.
 *   3. Community pool and leaderboard are readable by everyone (including
 *      unauthenticated for public docs if desired).
 *   4. Cloud Functions use the Admin SDK and bypass these rules for writes.
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // HELPER FUNCTIONS
    // =========================================================================

    /** True if the request has a signed-in user. */
    function isAuthenticated() {
      return request.auth != null;
    }

    /** True if the authenticated user owns the resource (document id or field). */
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    /** True if the given field is not being changed (for immutable fields). */
    function unchanged(field) {
      return !(field in request.resource.data) ||
             request.resource.data[field] == resource.data[field];
    }

    /**
     * True if the trip status transition is a valid client-side transition.
     * Only these transitions are allowed from the client:
     *   recording  → processing  (client signals trip ended, ready for scoring)
     *   recording  → failed      (client aborts a trip, e.g. too short)
     * All other transitions (→ completed, → disputed, etc.) must come from
     * Cloud Functions via the Admin SDK (which bypasses these rules).
     */
    function isValidClientStatusTransition() {
      let current = resource.data.status;
      let next = request.resource.data.status;
      return (current == 'recording' && next == 'processing')
          || (current == 'recording' && next == 'failed');
    }

    // =========================================================================
    // USERNAMES COLLECTION (username → uid lookup for sign-in)
    // =========================================================================
    // Public read so sign-in page can resolve "johndoe" → uid.
    // Only the owning user can create/update their username doc.
    // NOTE: consider replacing public read with a Cloud Function to prevent
    // username enumeration attacks.

    match /usernames/{username} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    // =========================================================================
    // USERS COLLECTION
    // =========================================================================

    match /users/{userId} {
      allow read: if isOwner(userId);

      allow create: if isOwner(userId)
        && request.resource.data.uid == userId
        && request.resource.data.email == request.auth.token.email;

      allow update: if isOwner(userId)
        && unchanged('uid')
        && unchanged('createdAt')
        && unchanged('createdBy')
        && unchanged('drivingProfile')
        && unchanged('poolShare')
        && unchanged('recentTrips')
        && unchanged('activePolicy');

      allow delete: if false;

      // Beta pricing estimate (computed by Cloud Functions; client read-only)
      match /betaPricing/{docId} {
        allow read: if isOwner(userId);
        allow write: if false;
      }
    }

    // =========================================================================
    // TRIPS COLLECTION
    // =========================================================================

    match /trips/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.createdBy == request.auth.uid
        && (request.resource.data.status == 'recording'
            || request.resource.data.status == 'processing');

      // Client may ONLY advance status via valid transitions (recording→processing
      // or recording→failed). Score, scoreBreakdown, events, anomalies, context
      // are locked — Cloud Functions set these via Admin SDK.
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && unchanged('score')
        && unchanged('scoreBreakdown')
        && unchanged('events')
        && unchanged('anomalies')
        && unchanged('context')
        && unchanged('userId')
        && unchanged('createdBy')
        && unchanged('createdAt')
        && isValidClientStatusTransition();

      allow delete: if false;
    }

    // =========================================================================
    // TRIP POINTS COLLECTION
    // =========================================================================

    match /tripPoints/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;

      match /batches/{batchId} {
        allow read: if isAuthenticated()
          && get(/databases/$(database)/documents/tripPoints/$(tripId)).data.userId == request.auth.uid;
        allow create: if isAuthenticated()
          && get(/databases/$(database)/documents/tripPoints/$(tripId)).data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // =========================================================================
    // DRIVER_STATS COLLECTION
    // =========================================================================

    match /driver_stats/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }

    // =========================================================================
    // POLICIES COLLECTION
    // =========================================================================

    match /policies/{policyId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    // =========================================================================
    // COMMUNITY POOL COLLECTION
    // =========================================================================
    // Read-only for all users. Ensure no per-user financial data is stored
    // directly on pool documents (pool-level aggregates only).

    match /communityPool/{poolId} {
      allow read: if true;
      allow write: if false;
    }

    // =========================================================================
    // POOL SHARES COLLECTION
    // =========================================================================

    match /poolShares/{shareId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // =========================================================================
    // LEADERBOARD COLLECTION
    // =========================================================================

    match /leaderboard/{leaderboardId} {
      allow read: if true;
      allow write: if false;
    }

    // =========================================================================
    // TRIP SEGMENTS COLLECTION
    // =========================================================================

    match /tripSegments/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // =========================================================================
    // TRIP AI INSIGHTS COLLECTION
    // =========================================================================

    match /tripAiInsights/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // =========================================================================
    // AI USAGE TRACKING (admin/analytics only)
    // =========================================================================

    match /aiUsageTracking/{docId} {
      allow read, write: if false;
    }

    // =========================================================================
    // COUNTERS (sharded counters — Cloud Functions only)
    // =========================================================================

    match /counters/{docId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // =========================================================================
    // CATCH-ALL: DENY
    // =========================================================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
