rules_version = '2';

/**
 * =============================================================================
 * DRIIVA FIRESTORE SECURITY RULES (Production)
 * =============================================================================
 *
 * Context:
 *   - Firebase Auth: users sign up with email/password (auth.uid = user id).
 *   - Collections: users, trips, driver_stats, policies, communityPool,
 *     poolShares, leaderboard, tripPoints, tripSegments.
 *
 * Principles:
 *   1. Users can only read/write their own data (users, trips, policies).
 *   2. Aggregated/computed data (driver_stats, communityPool, leaderboard,
 *      poolShares, tripSegments) are read-only for clients; only Cloud
 *      Functions (Firebase Admin SDK) can write them.
 *   3. Community pool and leaderboard are readable by everyone (including
 *      unauthenticated for public docs if desired).
 *   4. Cloud Functions use the Admin SDK and bypass these rules for writes.
 */

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // HELPER FUNCTIONS
    // =========================================================================

    /** True if the request has a signed-in user. */
    function isAuthenticated() {
      return request.auth != null;
    }

    /** True if the authenticated user owns the resource (document id or field). */
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    /** True if the given field is not being changed (for immutable fields). */
    function unchanged(field) {
      return !(field in request.resource.data) ||
             request.resource.data[field] == resource.data[field];
    }

    // =========================================================================
    // USERNAMES COLLECTION (username → email lookup for sign-in)
    // =========================================================================
    // Public read so sign-in page can resolve "johndoe" → "johndoe@example.com".
    // Only the owning user can create/update their username doc (uid must match auth.uid).

    match /usernames/{username} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow delete: if false;
    }

    // =========================================================================
    // USERS COLLECTION
    // =========================================================================
    // Each user has one document: users/{userId} where userId == auth.uid.
    // Authenticated users can read and write their own user document only.

    match /users/{userId} {
      allow read: if isOwner(userId);

      allow create: if isOwner(userId)
        && request.resource.data.uid == userId
        && request.resource.data.email == request.auth.token.email;

      allow update: if isOwner(userId)
        && unchanged('uid')
        && unchanged('createdAt')
        && unchanged('createdBy')
        && unchanged('drivingProfile')
        && unchanged('poolShare')
        && unchanged('recentTrips');

      allow delete: if false;

      // Beta pricing estimate (computed by Cloud Functions; client read-only)
      match /betaPricing/{docId} {
        allow read: if isOwner(userId);
        allow write: if false;
      }
    }

    // =========================================================================
    // TRIPS COLLECTION
    // =========================================================================
    // Users can only read/write trips where userId matches auth.uid.
    // Client creates with status 'recording', then updates to 'processing' or
    // 'failed'; Cloud Functions set final score and 'completed'.

    match /trips/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.createdBy == request.auth.uid
        && (request.resource.data.status == 'recording' || request.resource.data.status == 'processing');

      // Client may only advance status (recording→processing, recording→failed)
      // and update pointsCount. Score, scoreBreakdown, events, anomalies, context
      // are server-only fields set by Cloud Functions (Admin SDK, bypasses rules).
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && unchanged('score')
        && unchanged('scoreBreakdown')
        && unchanged('events')
        && unchanged('anomalies')
        && unchanged('context')
        && unchanged('userId')
        && unchanged('createdBy')
        && unchanged('createdAt');

      allow delete: if false;
    }

    // =========================================================================
    // TRIP POINTS COLLECTION
    // =========================================================================
    // Raw GPS/sensor points for a trip. Users can read/write only their own
    // (userId on parent or document must match auth.uid).

    match /tripPoints/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // GPS points are immutable after creation; only Cloud Functions may modify
      allow update: if false;

      allow delete: if false;

      match /batches/{batchId} {
        allow read: if isAuthenticated()
          && get(/databases/$(database)/documents/tripPoints/$(tripId)).data.userId == request.auth.uid;
        allow create: if isAuthenticated()
          && get(/databases/$(database)/documents/tripPoints/$(tripId)).data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }

    // =========================================================================
    // DRIVER_STATS COLLECTION
    // =========================================================================
    // Aggregated driving stats per user. Users can only read their own doc.
    // All writes must come from Cloud Functions (Admin SDK); client writes
    // are rejected.

    match /driver_stats/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }

    // =========================================================================
    // POLICIES COLLECTION
    // =========================================================================
    // Users can read only their own policies (userId matches auth.uid).
    // Creation/updates are done by backend or Cloud Functions only.

    match /policies/{policyId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create, update, delete: if false;
    }

    // =========================================================================
    // COMMUNITY POOL COLLECTION
    // =========================================================================
    // Read-only for all users (and optionally public for meta/current).
    // All writes come from Cloud Functions (e.g. scheduled aggregation).

    match /communityPool/{poolId} {
      allow read: if true;
      allow write: if false;
    }

    // =========================================================================
    // POOL SHARES COLLECTION
    // =========================================================================
    // Per-driver pool share snapshots. Users can read their own; listing for
    // leaderboard is allowed. Writes only from Cloud Functions.

    match /poolShares/{shareId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // No allow list: clients must read their own doc directly via getShareId.
      // Listing all pool shares would leak other drivers' financial data.
      allow write: if false;
    }

    // =========================================================================
    // LEADERBOARD COLLECTION
    // =========================================================================
    // Precomputed rankings. Read-only for everyone (public data).
    // Writes only from Cloud Functions (scheduled job).

    match /leaderboard/{leaderboardId} {
      allow read: if true;
      allow write: if false;
    }

    // =========================================================================
    // TRIP SEGMENTS COLLECTION (Stop-Go / classifier results)
    // =========================================================================
    // Users can read their own segments. Writes only from Cloud Functions.

    match /tripSegments/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // =========================================================================
    // CATCH-ALL: DENY
    // =========================================================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
