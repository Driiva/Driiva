# ============================================================================
# DRIIVA — ENVIRONMENT VARIABLES
# ============================================================================
#
# Copy to .env and fill in values. Never commit .env to version control.
#
# Firebase Cloud Functions secrets should be set via Secret Manager:
#   firebase functions:secrets:set ANTHROPIC_API_KEY
#
# Client (VITE_) vars are bundled into the browser — NEVER put server
# secrets (API keys, private keys) in VITE_ prefixed variables.
# ============================================================================

# ----------------------------------------------------------------------------
# FIREBASE — Client SDK (safe to expose, these are public config values)
# ----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ----------------------------------------------------------------------------
# FEATURE FLAGS (client-side)
# ----------------------------------------------------------------------------
VITE_FEATURE_AI_INSIGHTS=true
VITE_FEATURE_COMMUNITY_POOL=true
VITE_FEATURE_LEADERBOARD=true

# ----------------------------------------------------------------------------
# SENTRY — Error monitoring (client)
# Use project DSN from: Sentry Dashboard → Project Settings → Client Keys
# ----------------------------------------------------------------------------
VITE_SENTRY_DSN=

# ============================================================================
# SERVER / CLOUD FUNCTIONS — These are NOT prefixed with VITE_
# Set via Firebase Secret Manager in production:
#   firebase functions:secrets:set ANTHROPIC_API_KEY
# ============================================================================

# Anthropic API Key (Claude Sonnet 4 AI trip analysis)
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Sentry — Cloud Functions error monitoring
SENTRY_DSN_FUNCTIONS=

# Root Platform Insurance API
# https://app.rootplatform.com/
ROOT_API_KEY=sandbox_...
ROOT_API_URL=https://api.rootplatform.com/v1/insurance
ROOT_ENVIRONMENT=sandbox
ROOT_PRODUCT_MODULE_KEY=

# Encryption key for telematics data at rest (required in production)
# Set via Firebase Secret Manager:
#   firebase functions:secrets:set ENCRYPTION_KEY
ENCRYPTION_KEY=<set-via-firebase-secrets>

# Stripe (if used for billing)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
